{
 "name": "restart-ts-eslint-server",
  "displayName": "Restart TS/ESLint Server",
  "description": "The Restart TS/ESlint server button on your VS Code Status Bar",
  "version": "1.0.1",
  "publisher": "acoreyj",
  "engines": {
    "vscode": "^1.79.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "restart-ts-eslint-server.softRestartBothCommand",
        "title": "Restart TS/ESLint Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  },
	"keywords": [
		"typescript",
		"eslint",
		"eslint server",
		"ts server",
		"tsserver",
		"restart",
		"restart tsserver",
		"restart ts server",
		"restart eslint server"
	],
	"license": "SEE LICENSE IN LICENSE.md",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/acoreyj/vscode-restart-ts-eslint"
	},
	"bugs": {
		"url": "https://github.com/qcz/vscode-restart-ts-server-button/issues"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"galleryBanner": {
		"color": "#1e415e",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	]
}
